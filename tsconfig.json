{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "lib": [
      "esnext",
      "dom",
      "scripthost",
      "es2016.array.include",
      "esnext.asynciterable"
    ],
    "baseUrl": "src",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__tests__/*",
    "node_modules"
  ]
}